<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:theme="@style/ThemeOverlay.MyFirstMobileApp.FullscreenContainer"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="#000000"
             tools:context=".FullscreenActivity">
    <TextView android:layout_width="wrap_content"
              android:textStyle="bold"
              android:layout_height="wrap_content"
              android:text="Ứng dụng bé học toán"
              android:textSize="35sp"
              android:layout_centerHorizontal="true"/>
    <EditText
              android:id="@+id/editextso1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="70sp"
              android:layout_marginLeft="5sp"
              android:layout_marginRight="5sp"
              android:hint="Nhập 1 số bất kì"/>
    <EditText
            android:id="@+id/editextso2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:hint="Nhập 1 số bất kì"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ketqua"
            android:text="0"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="250sp" android:layout_centerHorizontal="true"/>
    <LinearLayout
            android:layout_marginTop="300sp"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="+"
                android:id="@+id/cong"

        />
        <Button
                android:textSize="20sp"
                android:layout_marginLeft="100sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="-"
                android:id="@+id/tru"

        />
    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="350sp"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="*"
                android:id="@+id/nhan"

        />
        <Button
                android:textSize="20sp"
                android:layout_marginLeft="100sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="/"
                android:id="@+id/chia"

        />
    </LinearLayout>
</RelativeLayout>